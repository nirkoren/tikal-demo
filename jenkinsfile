node {
    checkout scm
    def mvnHome
    cleanWS()
    stage('Preparation') { 
        
        git 'https://github.com/erezshi/tikal-demo.git'
        mvnHome = tool 'M3'
    }
    stage('Build') {
        withEnv(["MVN_HOME=$mvnHome"]) {
            sh '"$MVN_HOME/bin/mvn" clean install'
        }
    }
    stage('Results') {
        junit '**/target/surefire-reports/TEST-*.xml'
    }
}
